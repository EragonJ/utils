#!/usr/bin/perl
# paste
# for xeon-enouf ;p
use strict;

my @files = @ARGV or die;
my $int_host = '192.168.1.33';
my $ext_host = 'http://paste.trapd00r.se';

for(@files) {
  system("vim \"$_\" -c TOhtml -c :w :q! -c :q! -c :q!");
}

for(@files) {
  $_ .= '.html';
  system("scp -P 19216 \"$_\" $int_host:/home/srv/http/paste/");
  my $fullstr = "$ext_host/$_";
  system("printf \"$fullstr\n\" && printf \"$fullstr\"|xclip");
}
